<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/title_bar_height"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.andexert.library.RippleView
            android:id="@+id/settings_trackers"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:rv_color="@color/tiffany_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/settings_trakcer_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/settings_tracker"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/settings_trakcer_logo"
                    android:layout_toRightOf="@id/settings_trakcer_logo"
                    android:background="@drawable/item_menu_overlay"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:text="@string/home_trackers"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>

            </RelativeLayout>
        </com.andexert.library.RippleView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_separator"/>

        <com.andexert.library.RippleView
            android:id="@+id/settings_profile"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:rv_color="@color/tiffany_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/settings_profile_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/settings_profile"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/settings_profile_logo"
                    android:layout_toRightOf="@id/settings_profile_logo"
                    android:background="@drawable/item_menu_overlay"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:text="@string/settings_profile"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </com.andexert.library.RippleView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_separator"/>

        <com.andexert.library.RippleView
            android:id="@+id/settings_login_details"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:rv_color="@color/tiffany_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/settings_login_details_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/settings_password"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/settings_login_details_logo"
                    android:layout_toRightOf="@id/settings_login_details_logo"
                    android:background="@drawable/item_menu_overlay"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:text="@string/settings_login_details"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </com.andexert.library.RippleView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_separator"/>

        <com.andexert.library.RippleView
            android:id="@+id/settings_security_privacy"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:rv_color="@color/tiffany_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/settings_security_privacy_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/settings_security"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/settings_security_privacy_logo"
                    android:layout_toRightOf="@id/settings_security_privacy_logo"
                    android:background="@drawable/item_menu_overlay"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:text="@string/security_and_privacy"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </com.andexert.library.RippleView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_separator"/>

        <com.andexert.library.RippleView
            android:id="@+id/settings_logout"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:rv_color="@color/tiffany_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings_log_out_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/settings_log_out"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/settings_log_out_logo"
                    android:layout_toRightOf="@id/settings_log_out_logo"
                    android:background="@drawable/item_menu_overlay"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:text="@string/settings_logout"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/build_version_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>

            </RelativeLayout>
        </com.andexert.library.RippleView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_separator"/>

        <com.andexert.library.RippleView
            android:id="@+id/settings_sync"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:rv_color="@color/tiffany_blue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings_sync_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_sync_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/settings_sync_logo"
                    android:layout_toRightOf="@id/settings_sync_logo"
                    android:background="@drawable/item_menu_overlay"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:text="SYNC"
                    android:textColor="@color/text_label"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/last_attempted_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label"/>

                    <TextView
                        android:id="@+id/last_succeed_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label"/>

                </LinearLayout>

            </RelativeLayout>
        </com.andexert.library.RippleView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_separator"/>

        <com.andexert.library.RippleView
            android:id="@+id/settings_about"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="24dp"
            android:visibility="gone"
            app:rv_color="@color/tiffany_blue">

            <TextView
                style="@style/Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_menu_overlay"
                android:text="@string/settings_about"
                android:textColor="@color/text_label"
                android:textSize="14dp"
                android:visibility="gone"/>
        </com.andexert.library.RippleView>
    </LinearLayout>
</ScrollView>