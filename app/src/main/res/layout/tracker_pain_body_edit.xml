<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:background="@drawable/tracker_pain_body">

        <!--Head-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!--Head-->
            <TextView
                android:id="@+id/headText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa00ff00"
                android:layout_weight="4"
                android:layout_marginBottom="2dp"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="5"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </TableRow>

        <!--Back / Stomach / Left Hand-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2" />

            <!--back-->
            <TextView
                android:id="@+id/backText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa00ff00"
                android:layout_weight=".3"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".15">
                </TableRow>

                <!--left hand-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.3" />
                    <TextView
                        android:id="@+id/lefHandText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:text="0"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:clickable="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".15">
                </TableRow>

                <!--stomach-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />
                    <TextView
                        android:id="@+id/stomachText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:clickable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                </TableRow>
            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:layout_weight=".6" />

        <!--Hand Right-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="3.1"/>

            <!--Hand Right-->
            <TextView
                android:id="@+id/rightHandText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa00ff00"
                android:layout_weight="1"
                android:layout_marginBottom="40dp"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight=".9"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <!--Feet/Legs-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="0.8"/>

            <!--Feet/Legs-->
            <TextView
                android:id="@+id/feetText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa00ff00"
                android:layout_weight="3"
                android:layout_marginTop="35dp"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <include
        android:id="@+id/painChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_gravity="center"
        layout="@layout/pain_scale_chart" />

</FrameLayout>

