<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ht_logo"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ht_logo"
                android:src="@drawable/health_touch"
                android:text="@string/app_name"
                android:textColor="@color/text_label"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/security_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_menu_secure"/>

        </RelativeLayout>

        <com.andexert.library.RippleView
            android:id="@+id/home_trackers"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

            <uk.co.healtht.healthtouch.ui.widget.HomeItemLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tiffany_blue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/ic_stats"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_trackers"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>
            </uk.co.healtht.healthtouch.ui.widget.HomeItemLayout>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/home_messages"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

            <uk.co.healtht.healthtouch.ui.widget.HomeItemLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/indigo">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/ic_envelope"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_messages"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/message_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/message_counter"
                    android:gravity="center"
                    android:textSize="20dp"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleSmallInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
            </uk.co.healtht.healthtouch.ui.widget.HomeItemLayout>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/home_medication"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

            <uk.co.healtht.healthtouch.ui.widget.HomeItemLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_carmine_pink">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/ic_medication"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_medication"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>
            </uk.co.healtht.healthtouch.ui.widget.HomeItemLayout>

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/home_network"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

            <uk.co.healtht.healthtouch.ui.widget.HomeItemLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/vegas_gold">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/ic_stethoscope"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_patient_passport"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

                <uk.co.healtht.healthtouch.ui.widget.TrackerCircularBarWhiteFont
                    android:id="@+id/tracker_circular_bar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"/>

            </uk.co.healtht.healthtouch.ui.widget.HomeItemLayout>

        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/home_settings"
            rv_centered="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

            <uk.co.healtht.healthtouch.ui.widget.HomeItemLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rifle_green">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/ic_settings"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_settings"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>
            </uk.co.healtht.healthtouch.ui.widget.HomeItemLayout>
        </com.andexert.library.RippleView>
    </LinearLayout>
</ScrollView>