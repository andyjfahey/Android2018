<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_tab_background"
              android:orientation="vertical"
              android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tracker_type"
            style="@style/Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/item_breath_text"
            android:textSize="17dp"/>

        <ImageView
            android:id="@+id/tracker_type_icon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/tracker_dyspnea_repeat_icon"
            android:tint="@color/tiffany_blue"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tracker_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/item_breath_text"
        android:textSize="16dp"/>

</LinearLayout>