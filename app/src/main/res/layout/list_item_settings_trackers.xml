<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                 android:id="@+id/item_settings_trackers"
                                 rv_centered="true"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:clickable="true"
                                 app:rv_color="@color/tiffany_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_menu_overlay"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_tracker_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/list_item_tracker_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingBottom="24dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:textAllCaps="true"
            android:textColor="@color/label_color"
            android:textSize="18sp"/>
    </LinearLayout>
</com.andexert.library.RippleView>