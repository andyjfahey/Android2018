<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/vegas_gold">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/weight_height_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:weightSum="2">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/mh_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Weight (kg)"
                        android:imeOptions="actionNext"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/mh_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Height (meters)"
                        android:imeOptions="actionNext"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/birth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight_height_layout"
                android:background="@color/white"
                android:padding="10dp"
                android:weightSum="2">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/mh_birth_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Birth Weight (kg)"
                        android:imeOptions="actionNext"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/mh_birth_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Birth Length (meters)"
                        android:imeOptions="actionNext"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/birth_layout"
                android:layout_margin="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:id="@+id/mh_diagnoses_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="Diagnoses and Conditions"-->
                <!--android:textSize="17sp"-->
                <!--android:textStyle="bold"/>-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/mh_diagnoses"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:gravity="start"
                        android:hint="Diagnoses and Conditions"
                        android:inputType="text|textMultiLine"/>

                </android.support.design.widget.TextInputLayout>
                <!--<TextView-->
                <!--android:id="@+id/mh_allergies_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:text="Allergies"-->
                <!--android:textSize="17sp"-->
                <!--android:textStyle="bold"/>-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/mh_allergies"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:gravity="start"
                        android:hint="Allergies"
                        android:inputType="text|textMultiLine"/>

                </android.support.design.widget.TextInputLayout>

                <!--<TextView-->
                <!--android:id="@+id/mh_procedures_text"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:text="Procedures"-->
                <!--android:textSize="17sp"-->
                <!--android:textStyle="bold"/>-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/mh_procedures"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:gravity="start"
                        android:hint="Procedures"
                        android:inputType="text|textMultiLine"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
