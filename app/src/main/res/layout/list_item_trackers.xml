<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_tracker"
    rv_centered="true"
    app:rv_color="@color/tiffany_blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_menu_overlay"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_tracker_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/list_item_tracker_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:textColor="@color/label_color"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/list_item_tracker_graph"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/item_menu_overlay"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_tracker_stats" />

    </LinearLayout>
</com.andexert.library.RippleView>